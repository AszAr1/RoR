<div class="event">
  <div class="event-details">
    <h1>
      <%= event.name %>
    </h1>
    <p>Event description</p>
    <p>
      <%= event.description %>
    </p>
    <div class="date-category">
      <h3>
        <%= event.date %>
      </h3>
      <p>
        <%= event.category.name %>
      </p>
    </div>

  </div>
  <div class="event-weather">
    <h1>
      Weather this day
    </h1>
  </div>
</div>
<div class="event-buttons">
  <%= link_to @is_changeable ? "Change event" : "Can't change", edit_event_path, class: @change_button_class %>
  <%= link_to "Delete event", "/events/" + event.id.to_s + "/delete_confirmation", class: "red-button" %>
</div>