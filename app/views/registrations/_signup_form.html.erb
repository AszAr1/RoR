
<%= form_with model: user, url: registration_path, class: "form" do |form| %>
  <p class="form-p">Sign up</p>

  <div class="form-field">
    <%= form.email_field :email, placeholder: "Email" %>
  </div>
  <div class="form-field">
    <%= form.password_field :password, placeholder: "Password" %>
  </div>
  <div class="form-field">
    <%= form.password_field :password_confirmation, placeholder: "Password confirmation" %>
  </div>

  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  <% end %>
  <div class="form-button">
    <%= form.submit "Sign up" %>
  </div>
<% end %>